{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
     <a class="btn btn-sm btn-primary mb-3" href="{{ path('app_user_new') }}">Ajouter un utilisateur</a>

    {{ include('_flash_messages.html.twig')}}


    <table class="table">
        <thead>
            <tr>
                <th class="col-1">Id</th>
                <th class="col-2">Email</th>
                <th class="col-3">Roles</th>
                <th class="col-2">Username</th>
                <th class="col-4">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.username }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn bt-sm btn-primary">Afficher</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn bt-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

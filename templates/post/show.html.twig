{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>NbViews</th>
                <td>{{ post.nbViews }}</td>
            </tr>
            <tr>
                <th>NbLikes</th>
                <td>{{ post.nbLikes }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ post.status }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-primary mt-3 mb-3" href="{{ path('app_post_index') }}">Retour Ã  la liste</a>

    <a class="btn btn-sm btn-primary mt-3 mb-3" href="{{ path('app_post_edit', {'id': post.id}) }}">Modifier</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}

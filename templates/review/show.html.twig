{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <h1>Avis {{ review.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ review.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-primary mt-3 mb-3 bi bi-skip-backward"  href="{{ path('app_review_index') }}"> Retour</a>

    <a class="btn btn-sm btn-warning mt-3 mb-3 bi bi-pencil-square" href="{{ path('app_review_edit', {'id': review.id}) }}"> Modifier</a>

    {{ include('review/_delete_form.html.twig') }}
{% endblock %}
